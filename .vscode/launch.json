{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Debug Unittests (discover)",
      "type": "python",
      "request": "launch",
      "module": "unittest",
      "args": ["discover","-v"],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Debug calculator.py",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/calculator.py",
      "console": "integratedTerminal"
    }
  ]
}
